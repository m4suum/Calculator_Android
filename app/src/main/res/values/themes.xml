<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:buttonStyle">@style/buttonNumber</item>
    </style>

    <style name="buttonNumber" parent="android:style/Widget.Button">
        <item name="android:textSize">40sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_number</item>
    </style>

    <style name="tvResult" parent="android:style/Widget.TextView">
        <item name="android:textSize">48sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/result_text</item>
        <item name="android:background">@drawable/tv_result</item>
    </style>
</resources>